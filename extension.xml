<?xml version="1.0" encoding="iso-8859-1"?>
<root version="3.0">
	<properties>
		<name>5E Extension - NPC flavors</name>
		<version>1.1</version>
		
		<author>Tideturner</author>
		<description>Add random flavors to NPC names in the combat tracker</description>

        <loadorder>1</loadorder>
	</properties>

    <announcement text="NPC flavors v1.1\n- by Tideturner (Over-processed bristles)"/>

    <base>
        <!-- Strings -->
        <includefile source="strings/npc_flavors_strings.xml" />
        <!-- NPC Flavors Scripts -->
        <script name="CombatManagerOverride" file="scripts/manager_combat_override.lua" />
        <script name="NPCFlavorData" file="scripts/npc_flavors_data.lua" />
        <script name="NPCFlavors" file="scripts/manager_npc_flavors.lua" />
	</base>
</root>